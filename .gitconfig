[alias]
    detach = "!b=`git rev-parse --abbrev-ref HEAD`; git checkout `git rev-parse HEAD` && git branch -d \"$b\""
    hold = branch hold
    message = log -1 --format=%B
    orphans = "!git tree `git reflog --format=%h`"
    tree = log --graph --pretty=oneline --abbrev-commit --decorate
    wip = commit -am WIP
[color]
    ui = true
[core]
    editor = vim
    excludesfile = ~/.gitignore-global
    # This is a hack to reduce diff tabstop from 8 to 4
    pager = less -x1,5
[push]
    default = upstream
[include]
    # User preferences in a separate file for better modularity
    path = .gituser
[pull]
    ff = only
[advice]
    detachedHead = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
